{
  "_meta": {
    "@CODE:CONFIG-STRUCTURE-001": "@DOC:JSON-CONFIG-001",
    "@SPEC:PROJECT-CONFIG-001": "@SPEC:MOAI-CONFIG-001"
  },
  "moai": {
    "version": "{{MOAI_VERSION}}"
  },
  "constitution": {
    "enforce_tdd": true,
    "principles": {
      "simplicity": {
        "max_projects": 5,
        "notes": "Default recommended value. Adjust with rationale in .moai/config.json or SPEC/ADR based on project scale."
      }
    },
    "require_tags": true,
    "simplicity_threshold": 5,
    "test_coverage_target": 85
  },
  "git_strategy": {
    "personal": {
      "auto_checkpoint": "event-driven",
      "checkpoint_events": [
        "delete",
        "refactor",
        "merge",
        "script",
        "critical-file"
      ],
      "checkpoint_type": "local-branch",
      "max_checkpoints": 10,
      "cleanup_days": 7,
      "push_to_remote": false,
      "auto_commit": true,
      "branch_prefix": "feature/",
      "develop_branch": "develop",
      "main_branch": "main"
    },
    "team": {
      "auto_pr": true,
      "develop_branch": "develop",
      "draft_pr": true,
      "feature_prefix": "feature/SPEC-",
      "main_branch": "main",
      "use_gitflow": true
    }
  },
  "pipeline": {
    "available_commands": [
      "/alfred:0-project",
      "/alfred:1-plan",
      "/alfred:2-run",
      "/alfred:3-sync"
    ],
    "current_stage": "initialized"
  },
  "project": {
    "created_at": "{{CREATION_TIMESTAMP}}",
    "description": "{{PROJECT_DESCRIPTION}}",
    "initialized": true,
    "language": "ko",
    "language_selected_at": "{{CREATION_TIMESTAMP}}",
    "language_confirmed": false,
    "locale": "ko",
    "mode": "{{PROJECT_MODE}}",
    "name": "{{PROJECT_NAME}}",
    "moai_adk_version": "0.4.0",
    "optimized": false,
    "last_merge": "2025-10-21T00:00:00",
    "backup_source": ".moai-backups/20251020-011755/"
  },
  "tags": {
    "auto_sync": true,
    "storage_type": "code_scan",
    "categories": [
      "REQ",
      "DESIGN",
      "TASK",
      "TEST",
      "FEATURE",
      "API",
      "UI",
      "DATA"
    ],
    "code_scan_policy": {
      "no_intermediate_cache": true,
      "realtime_validation": true,
      "scan_tools": [
        "rg",
        "grep"
      ],
      "scan_command": "rg '@TAG' -n",
      "philosophy": "The truth of TAG exists only in the code itself"
    }
  }
}