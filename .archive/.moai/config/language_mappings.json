{
  "test_runners": {
    "python": "pytest",
    "javascript": "npm test",
    "typescript": "npm test",
    "go": "go test ./...",
    "rust": "cargo test",
    "java": "gradle test | mvn test",
    "csharp": "dotnet test",
    "cpp": "ctest | make test"
  },
  "formatters": {
    "python": "black",
    "javascript": "prettier",
    "typescript": "prettier",
    "go": "gofmt",
    "rust": "rustfmt",
    "java": "google-java-format",
    "csharp": "dotnet format",
    "cpp": "clang-format"
  },
  "linters": {
    "python": "ruff",
    "javascript": "eslint",
    "typescript": "eslint",
    "go": "golangci-lint",
    "rust": "cargo clippy",
    "java": "checkstyle",
    "csharp": "dotnet format --verify-no-changes",
    "cpp": "clang-tidy"
  }
}

