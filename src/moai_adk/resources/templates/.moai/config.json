{
  "moai_version": "0.1.17",
  "project_type": "spec_first_tdd",
  "created_at": "2025-09-12T01:52:00Z",
  "last_updated": "2025-09-12T01:52:00Z",
  
  "automation": {
    "autoCommit": "ask",
    "autoSync": "ask", 
    "autoPush": "never",
    "autoValidation": true,
    "contextOptimization": true
  },
  
  "quality_gates": {
    "coverageTarget": 0.8,
    "testRunner": "pytest",
    "lintCommand": "flake8",
    "typecheckCommand": "mypy",
    "strictRegression": false,
    "enforceSessionBoundary": false
  },
  
  "pipeline": {
    "stages": ["SPECIFY", "PLAN", "TASKS", "IMPLEMENT"],
    "mandatorySequence": true,
    "allowSkipStages": false,
    "contextResetBetweenStages": true,
    "validatePreviousStage": true
  },
  
  "constitution": {
    "maxProjects": 3,
    "requireLibraries": true,
    "enforceTDD": true,
    "requireObservability": true,
    "versioningScheme": "MAJOR.MINOR.BUILD",
    "violations": {
      "blockOnViolation": true,
      "allowJustification": true,
      "trackViolations": true
    }
  },
  
  "tag_system": {
    "enabled": true,
    "version": "16-core",
    "autoIndexing": true,
    "validateNaming": true,
    "enforceTraceability": true,
    "categories": {
      "SPEC": {
        "tags": ["REQ", "SPEC", "DESIGN", "TASK"],
        "required": true,
        "description": "문서 추적 태그"
      },
      "STEERING": {
        "tags": ["VISION", "STRUCT", "TECH", "ADR"],
        "required": true,
        "description": "원칙 추적 태그"
      },
      "IMPLEMENTATION": {
        "tags": ["FEATURE", "API", "TEST", "DATA"],
        "required": true,
        "description": "코드 추적 태그"
      },
      "QUALITY": {
        "tags": ["PERF", "SEC", "DEBT", "TODO"],
        "required": false,
        "description": "품질 추적 태그"
      }
    }
  },
  
  "hooks": {
    "enabled": true,
    "preToolUse": {
      "policyBlock": true,
      "constitutionGuard": true,
      "specValidator": true,
      "tddEnforcer": true
    },
    "postToolUse": {
      "tagSync": true,
      "contextOptimizer": true,
      "stageGuard": true
    },
    "sessionStart": {
      "stateNotification": true,
      "contextWarning": true
    }
  },
  
  "external_tools": {
    "denyExternalTools": false,
    "allowedCommands": [
      "pytest", "flake8", "mypy", "git", "npm", "pip"
    ],
    "blockedCommands": [
      "rm -rf", "sudo", "dd", "mkfs"
    ]
  },
  
  "performance": {
    "maxContextSize": 200000,
    "contextWarningThreshold": 0.8,
    "autoContextCleanup": true,
    "parallelExecution": true,
    "caching": {
      "enabled": true,
      "tagIndexCache": true,
      "steeringDocCache": true,
      "templateCache": true
    }
  },
  
  "logging": {
    "level": "INFO",
    "structured": true,
    "components": {
      "pipeline": true,
      "hooks": true,
      "agents": true,
      "tags": true
    },
    "retention": {
      "days": 30,
      "maxFileSize": "10MB"
    }
  },
  
  "development": {
    "debug": false,
    "verboseMode": false,
    "dryRun": false,
    "skipValidation": false,
    "allowExperimentalFeatures": false
  },
  
  "integrations": {
    "github": {
      "enabled": false,
      "prTemplate": true,
      "issueTracking": true,
      "ciIntegration": true
    },
    "ide": {
      "vscode": true,
      "intellij": false,
      "vim": false
    }
  },
  
  "templates": {
    "version": "0.1.15",
    "autoUpdate": true,
    "customTemplates": false,
    "available": [
      "spec-template.md",
      "plan-template.md", 
      "tasks-template.md",
      "adr-template.md",
      "acceptance-template.md"
    ]
  },
  
  "agents": {
    "core_agents": [
      "claude-code-manager",
      "steering-architect",
      "spec-manager",
      "plan-architect",
      "task-decomposer",
      "code-generator",
      "test-automator",
      "tag-indexer",
      "doc-syncer",
      "deployment-specialist",
      "quality-auditor"
    ],
    "agent_timeout": 300000,
    "max_concurrent_agents": 4,
    "agent_memory_limit": "200MB",
    "model_selection": {
      "opus": ["steering-architect", "plan-architect"],
      "sonnet": ["claude-code-manager", "spec-manager", "task-decomposer", "test-automator", "code-generator", "integration-manager", "deployment-specialist"],
      "haiku": ["tag-indexer", "doc-syncer"]
    }
  },
  
  "commands": {
    "namespace": "moai",
    "available": ["project", "spec", "plan", "tasks", "dev", "review", "sync"],
    "command_timeout": 600000,
    "auto_completion": true,
    "help_enabled": true
  },
  
  "sync": {
    "auto_sync": true,
    "sync_interval": "realtime",
    "batch_size": 10,
    "excluded_patterns": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      "*.log",
      "*.backup"
    ],
    "included_patterns": [
      "src/**/*.{ts,tsx,js,jsx,py}",
      "**/*.{test,spec}.{ts,tsx,js,jsx,py}",
      ".moai/**/*.md",
      "docs/**/*.md",
      "README.md",
      "package.json",
      "pyproject.toml"
    ]
  },
  
  "security": {
    "allowed_domains": [
      "github.com",
      "docs.anthropic.com",
      "nextjs.org",
      "react.dev",
      "typescript.org",
      "nodejs.org",
      "python.org",
      "developer.mozilla.org",
      "stackoverflow.com",
      "npmjs.com",
      "pypi.org"
    ],
    "dangerous_commands_blocked": true,
    "steering_protection": true,
    "sensitive_file_protection": true,
    "path_traversal_protection": true
  },

  "mcp_servers": {
    "enabled": true,
    "token_management": {
      "auto_refresh": true,
      "max_token_usage": 200000,
      "warning_threshold": 0.8
    },
    "servers": {
      "context7": {
        "enabled": true,
        "description": "Library documentation and code examples",
        "priority": "high"
      },
      "sequential-thinking": {
        "enabled": true,
        "description": "Dynamic problem-solving through thoughts",
        "priority": "medium"
      },
      "ide": {
        "enabled": true,
        "description": "VS Code integration for diagnostics",
        "priority": "low"
      }
    }
  },

  "environment_variables": {
    "MOAI_PROJECT": {
      "description": "Current project name",
      "required": false,
      "default": null
    },
    "MOAI_VERSION": {
      "description": "MoAI-ADK version",
      "required": true,
      "default": "0.1.17"
    },
    "CLAUDE_MODEL": {
      "description": "Default Claude model for agents",
      "required": false,
      "default": "sonnet"
    }
  }
}
