{
  "project": {
    "name": "{{PROJECT_NAME}}",
    "version": "0.1.0",
    "description": "{{PROJECT_DESCRIPTION}}",
    "language": "{{LANGUAGE}}",
    "created": "{{CREATED_DATE}}",
    "last_updated": "{{LAST_UPDATED}}"
  },
  "constitution": {
    "version": "1.0",
    "principles": {
      "simplicity": {
        "enabled": true,
        "max_projects": 3,
        "max_module_loc": 300,
        "description": "프로젝트 복잡도 ≤ 3개, 모듈 ≤ 300 LOC"
      },
      "architecture": {
        "enabled": true,
        "library_first": true,
        "plugin_system": true,
        "description": "모든 기능은 라이브러리로, 플러그인 구조"
      },
      "testing": {
        "enabled": true,
        "tdd_enforced": false,
        "min_coverage": 85,
        "coverage_strict": false,
        "red_green_refactor": true,
        "allow_exceptions": true,
        "description": "TDD 권장, 커버리지 85% 목표"
      },
      "observability": {
        "enabled": true,
        "structured_logging": true,
        "tag_traceability": true,
        "metrics_collection": true,
        "description": "구조화 로깅, TAG 추적, 메트릭 수집"
      },
      "versioning": {
        "enabled": true,
        "semantic_versioning": true,
        "auto_tagging": true,
        "backward_compatibility": true,
        "description": "시맨틱 버전, 자동 태깅, 하위 호환성"
      }
    }
  },
  "features": {
    "priority": []
  },
  "tech_stack": {
    "language": {
      "{{DETECTED_LANGUAGE}}": "{{DETECTED_VERSION}}",
      "target_version": "{{TARGET_VERSION}}"
    },
    "core_dependencies": {},
    "dev_tools": {
      "current": {},
      "upgrade_to": {}
    }
  },
  "languages": {
    "language_neutral": true,
    "supported": [
      "python", "javascript", "typescript", "go", "rust", "java", "csharp", "cpp"
    ],
    "auto_detect": true
  },
  "quality_gates": {
    "test_coverage": 85,
    "coverage_enforced": false,
    "type_coverage": 90,
    "complexity_max": 10,
    "strict_mode": false,
    "hotfix_exceptions": true,
    "small_change_threshold": 10,
    "build_time_reduction": 50,
    "memory_reduction": 30,
    "error_rate_target": 5,
    "description": "품질 목표 - 엄격 모드가 아니면 권장사항"
  },
  "tag_system": {
    "version": "16-core",
    "categories": {
      "SPEC": ["REQ", "DESIGN", "TASK"],
      "STEERING": ["VISION", "STRUCT", "TECH", "ADR"],
      "IMPLEMENTATION": ["FEATURE", "API", "TEST", "DATA"],
      "QUALITY": ["PERF", "SEC", "DEBT", "TODO"]
    },
    "naming_convention": "{CATEGORY}:{TOPIC}-{ID}",
    "examples": [
      "@REQ:USER-AUTH-001",
      "@DESIGN:API-GATEWAY",
      "@FEATURE:LOGIN-SYSTEM"
    ]
  }
}