# Include only minimized resource set for 0.2.1
include src/moai_adk/resources/VERSION
include src/moai_adk/resources/templates/CLAUDE.md
include src/moai_adk/resources/templates/.claude/settings.json
recursive-include src/moai_adk/resources/templates/.claude/agents/moai *.md
recursive-include src/moai_adk/resources/templates/.claude/commands/moai *.md
recursive-include src/moai_adk/resources/templates/.claude/hooks/moai *.py
recursive-include src/moai_adk/resources/templates/.claude/memory *
recursive-include src/moai_adk/resources/templates/.moai *
recursive-include src/moai_adk/resources/templates/.github/workflows *.yml
recursive-include src/moai_adk/resources/templates/scripts *

# Include documentation
include README.md
include LICENSE
include CLAUDE.md

# Include configuration files
include pyproject.toml

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
